<h1 class="float-left">Customer Information</h1>

<%= link_to "Edit Customer", edit_customer_path, class: "float-right btn btn-lg btn-primary add-customer-btn" %>

<table class="customers--table">
  <% @customer.customer_attributes.each do |k,v| %>
    <tr>
      <td><%= k.gsub(/_/, ' ').titleize %></td>
      <td><%= v %></td>
    </tr>
  <% end %>
</table>
